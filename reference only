        }

        function filterDirectory(query) {
            if(!query) {
                renderCreators(creators);
                return;
            }
            const lowerQ = query.toLowerCase();
            const filtered = creators.filter(c => 
                c.title.toLowerCase().includes(lowerQ) || 
                c.cat.toLowerCase().includes(lowerQ) ||
                c.loc.toLowerCase().includes(lowerQ) ||
                c.tags.some(t => t.toLowerCase().includes(lowerQ)) ||
                c.badge.toLowerCase().includes(lowerQ)
            );
            renderCreators(filtered);
        }

        const filterOverlay = document.getElementById('filter-overlay');
        function toggleFilters() {
            if(filterOverlay.classList.contains('hidden')) {
                filterOverlay.classList.remove('hidden');
                filterOverlay.classList.add('flex');
            } else {
                filterOverlay.classList.add('hidden');
                filterOverlay.classList.remove('flex');
            }
        }

        renderCreators(creators);

        // --- CONTENT MODAL LOGIC ---
        const contentModal = document.getElementById('content-modal');
        const contentPanel = document.getElementById('content-panel');
        const contentTitle = document.getElementById('content-title');
        const contentBody = document.getElementById('content-body');

        function openContentModal(type) {
            let title = '';
