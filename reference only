        function closeContentModal() {
            contentPanel.classList.remove('modal-enter-active');
            contentPanel.classList.add('modal-exit');
            menuTriggerContainer.classList.remove('fab-hidden');
            setTimeout(() => {
                contentModal.classList.remove('flex');
                contentModal.classList.add('hidden');
                contentPanel.classList.remove('modal-exit');
                contentPanel.classList.add('modal-enter');
            }, 200);
        }

        // Logic Switch inside Modal
        function switchTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(el => {
                el.classList.add('hidden');
                el.classList.remove('active');
            });
            const target = document.getElementById('tab-' + tabName);
            if(target) {
                target.classList.remove('hidden');
                target.classList.add('active');
            }
            
            // Explicitly set classes for active/inactive
            const buyersBtn = document.getElementById('btn-buyers');
            const creatorsBtn = document.getElementById('btn-creators');

            if (tabName === 'buyers') {
                buyersBtn.className = "bg-ink text-white font-bold border-ink type-meta text-xs tracking-wide px-4 py-2 rounded-full transition-all border";
                creatorsBtn.className = "text-ink font-medium border-transparent bg-transparent type-meta text-xs tracking-wide px-4 py-2 rounded-full transition-all border hover:bg-gray-50";
            } else {
                creatorsBtn.className = "bg-ink text-white font-bold border-ink type-meta text-xs tracking-wide px-4 py-2 rounded-full transition-all border";
                buyersBtn.className = "text-ink font-medium border-transparent bg-transparent type-meta text-xs tracking-wide px-4 py-2 rounded-full transition-all border hover:bg-gray-50";
            }
        }

        // --- PROFILE MODAL LOGIC (Standard) ---
        const modal = document.getElementById('quick-view');
        const modalPanel = document.getElementById('modal-panel');
        const menuTriggerContainer = document.getElementById('menu-trigger-container');

        function openModal(id) {
            const data = creators.find(c => c.id === id);
            if(!data) return;

            document.getElementById('modal-title').innerText = data.title;
            document.getElementById('modal-desc').innerText = data.desc;
            document.getElementById('modal-img').src = data.img || ''; 
            document.getElementById('modal-badge').innerText = data.badge;
            document.getElementById('modal-loc').innerText = data.loc;
            document.getElementById('modal-cat').innerText = data.cat;

            menuTriggerContainer.classList.add('fab-hidden');
            modal.classList.remove('hidden');
            setTimeout(() => {
                modal.classList.add('flex');
                modalPanel.classList.remove('modal-enter');
                modalPanel.classList.add('modal-enter-active');
            }, 10);
        }

        function closeModal() {
            modalPanel.classList.remove('modal-enter-active');
            modalPanel.classList.add('modal-exit');
            menuTriggerContainer.classList.remove('fab-hidden');
            setTimeout(() => {
                modal.classList.remove('flex');
                modal.classList.add('hidden');
                modalPanel.classList.remove('modal-exit');
                modalPanel.classList.add('modal-enter');
            }, 200);
        }

        // --- MENU LOGIC ---
        const assistiveMenu = document.getElementById('assistive-menu');
        const assistivePanel = document.getElementById('assistive-menu-panel');
        const triggerBtn = document.getElementById('menu-trigger');

        function toggleMenu() {
            if (assistiveMenu.classList.contains('hidden')) {
                assistiveMenu.classList.remove('hidden');
                assistiveMenu.classList.add('flex');
                triggerBtn.classList.add('scale-90', 'opacity-50'); 
                setTimeout(() => {
                    assistivePanel.classList.remove('menu-pop-enter');
                    assistivePanel.classList.add('menu-pop-active');
                }, 10);
            } else {
                assistivePanel.classList.remove('menu-pop-active');
                assistivePanel.classList.add('menu-pop-exit');
                triggerBtn.classList.remove('scale-90', 'opacity-50');
                setTimeout(() => {
                    assistiveMenu.classList.add('hidden');
                    assistiveMenu.classList.remove('flex');
                    assistivePanel.classList.remove('menu-pop-exit');
                    assistivePanel.classList.add('menu-pop-enter');
                }, 200);
            }
        }
    </script>
